// MUDANDO ESTILO DO RADIO		
.inputRadioAzul
	padding-bottom 17px
	.radio-item	
		display inline-block
		position relative
		padding 0 6px
		margin 10px 24px 0 0				
		input[type="radio"]		
			cursor pointer
			display none !important
			&:focus
				outline 0 !important
				box-shadow none !important
		.radio-inline
			font-size 19px
			padding-left 0
		label
			&:before
				content " "
				display inline-block
				position relative
				top 5px
				margin 0 -7px 0 0
				width 21px
				height 21px
				border-radius 11px
				border 3px solid CorCinza3
				background-color transparent								
		input[type="radio"]:checked + label:after
			border-radius 11px
			width 7px
			height 7px
			position absolute
			top 12px
			left 7px
			content " "
			display block
			background CorAzul4
		input[type="radio"]:checked + label:before
			border 3px solid CorAzul4

// MUDANDO ESTILO DO CHECKBOX
.inputCheckboxAzul
	.checkbox-item
		display inline-block
		position relative
		padding 0 6px
		margin 10px 17px 0 0
		width 150px
	.checkbox
		display inline-block
		vertical-align middle
		cursor pointer
		-webkit-user-select none
		-moz-user-select none
		-ms-user-select none
		user-select none
		padding-left 3px
		input
			display none
			& + span
				display inline-block
				position relative
				padding-left 20px
				line-height 22px
				text-indent 15px
				&:before
					content ''
					display block
					position absolute
					top 0px
					left 0px
					border-radius 3px
					margin-right 5px
					width 21px
					height 21px
					border 2px solid CorCinza3
					background transparent
				&:after
					content ''
					display block
					width 8px
					height 14px
					border-bottom 3px solid CorCinza1
					border-right 3px solid CorCinza1
					position absolute
					top 1px
					left 6px
					opacity 0
					pointer-events none
					
			&:checked
				& + span
					&:before
						background CorAzul4
						border none
					&:after
						opacity 1
						-webkit-transform scale(1, 1) rotate(45deg)
						transform scale(1, 1) rotate(45deg)


